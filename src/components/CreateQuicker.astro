---
import illustration from "@assets/illustration-create-post.webp"
---

<article>
    <h2>Create and schedule content <em>quicker.</em></h2>
    <img src={illustration.src} width={illustration.width} height={illustration.height} decoding="async" loading="lazy" alt='' />
</article>



<style>
    article {
        padding: 2rem;
        background: hsl(var(--yellow-100));

        @media (width > 620px) {
            align-content: center;
        }
    }

    img {
        margin-block-start: 1rem;
        max-inline-size: 11.875rem;

         @media (width > 620px) {
        margin-block-start: 1.5rem;
             max-inline-size: 100%;
         }
    }

    h2 {
        letter-spacing: -0.05em;

        @media (width > 620px) {
           font-size: 2.5rem;
           line-height: 0.9;
           letter-spacing: -0.03em;
        }
    }

    em  {
        color: hsl(var(--purple-500));
    }

</style>
